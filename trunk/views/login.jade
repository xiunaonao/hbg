extends layout

block content
	.login-main
		.login-box
			h4.login-title 用户登录
			.login-input
				label 账号:
				input#username(placeholder='请输入手机号码') 
			.login-input
				label 密码:
				input#password(type='password',placeholder='请输入密码') 
			.login-option
				input#isremember.checkbox(type='checkbox')
				label 记住密码
				a(href="findPwd") 忘记密码
			.login-btn
				button#login 登录
			.login-change
				a(href='register') 立即注册>>
block footer
	script(src="/js/login.js?v=#{_v}")